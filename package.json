{
  "name": "react-beginner-env",
  "version": "2.0.0",
  "description": "Basic skeleton for setting up react+node apps",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "start:server": "node ./lib/server.prod.js",
    "pm2:run:server": "pm2 start ./lib/server.prod.js",
    "pm2:stop:server": "cross-env NODE_ENV=prod pm2 stop server.prod",
    "prod:build:server": "cross-env NODE_ENV=prod npm run clean:server && npx babel --extensions '.ts' ./src/server/ --out-dir ./lib",
    "prod:watch:server": "cross-env NODE_ENV=prod node ./scripts/nodemon-server.js",
    "dev:build:server": "cross-env NODE_ENV=dev webpack --config server.webpack.config.js --display-error-details",
    "dev:watch:server": "cross-env NODE_ENV=dev webpack --config server.webpack.config.js --watch --display-error-details",
    "dev:nodemon:server": "cross-env NODE_ENV=dev nodemon ./lib/server.prod.js",
    "dev:run:server": "npm run dev:build:server && npm-run-all --parallel dev:nodemon:server dev:watch:server",
    "build:client": "cross-env NODE_ENV=dev webpack --config client.webpack.config.js --display-error-details",
    "watch:client": "cross-env NODE_ENV=dev webpack --config client.webpack.config.js --watch --display-error-details",
    "clean:server": "rimraf ./lib",
    "clean:client": "rimraf ./static/client/js/bundles",
    "clean": "npm-run-all --parallel clean:server clean:client",
    "killnode": "killall node",
    "start": "npm run build && npm run start:server"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "pretty-quick --staged",
      "eslint './src/*/*' --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "yes "
  },
  "author": "Shivam Tripathi",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^2.2.1",
    "classnames": "^2.2.6",
    "cross-env": "^5.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.2",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "pug": "^2.0.0-rc.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^5.2.0",
    "split": "^1.0.1",
    "typescript": "^3.4.4",
    "validator": "^10.11.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/app-root-path": "^1.2.4",
    "@types/ejs": "^2.6.3",
    "@types/express": "^4.16.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.5",
    "@types/pug": "^2.0.4",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^5.1.5",
    "@types/split": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "pm2": "^3.5.0",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
